{
    "name": "pxplus",
    "displayName": "pxplus",
    "description": "PXPlus Language Extension for VSCode",
    "version": "0.0.3",
    "publisher": "b1tzer0",
    "author": {
        "email": "b1t_zer0@hotmail.com",
        "name": "Rick Mathers"
    },
    "contributors": [],
    "keywords": [
        "pxplus"
    ],
    "engines": {
        "vscode": "^1.83.1"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "pxplus",
                "extensions": [
                    ".pvx",
                    ".pvc",
                    ".pvs",
                    ".pvt",
                    ".pvp"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "pxplus",
                "scopeName": "source.pxplus",
                "path": "./syntaxes/pxplus.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "pxplus",
                "path": "./snippets/pxplus.code-snippets"
            }
        ],
        "configuration": {
            "title": "PXPlus Configuration",
            "properties": {
                "pxplus.suggest.basic": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable basic hover tips and signature helpers."
                },
                "pxplus.workingDirectory.programs": {
                    "type": "string",
                    "description": "Working Directory for you programs",
                    "default": "C:\\Dev\\Bin\\Programs",
                    "scope": "window"
                },
                "pxplus.workingDirectory.tools": {
                    "type": "string",
                    "description": "Working Directory for you tools",
                    "default": "C:\\Dev\\Tools",
                    "scope": "window"
                },
                "pxplus.commands.cpl": {
                    "type": "string",
                    "description": "Compile Command - use %f for current file.",
                    "default": "",
                    "scope": "window"
                },
                "pxplus.commands.lst": {
                    "type": "string",
                    "description": "List Command - use %f for current file.",
                    "default": "",
                    "scope": "window"
                }
            }
        },
        "commands": [
            {
                "category": "PxPlus",
                "command": "pxplus.cpl",
                "title": "Compile"
            },
            {
                "category": "PxPlus",
                "command": "pxplus.lst",
                "title": "List"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/b1tzer0/vscode-pxplus.git"
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "yarn run test-compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.3",
        "@types/node": "^20.8.8",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "ts-loader": "^9.5.0",
        "typescript": "^5.2.2",
        "vscode-test": "^1.6.1",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    }
}
