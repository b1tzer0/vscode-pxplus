{
    "name": "pxplus",
    "displayName": "pxplus",
    "description": "PXPlus Language Extension for VSCode",
    "version": "0.0.4",
    "publisher": "b1tzer0",
    "author": {
        "email": "b1t_zer0@hotmail.com",
        "name": "Rick Mathers"
    },
    "contributors": [],
    "keywords": [
        "pxplus"
    ],
    "engines": {
        "vscode": "^1.83.1"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "pxplus",
                "extensions": [
                    ".pvx",
                    ".pvc",
                    ".pvs",
                    ".pvt",
                    ".pvp",
                    ".pxprg"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "pxplus",
                "scopeName": "source.pxplus",
                "path": "./syntaxes/pxplus.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "pxplus",
                "path": "./snippets/pxplus.code-snippets"
            }
        ],
        "configuration": {
            "title": "PXPlus Configuration",
            "properties": {
                "pxplus.suggest.basic": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable basic hover tips and signature helpers."
                },           
                "pxplus.windx.client": {
                    "type": "boolean",
                    "default": false,
                    "description": "Windx"
                },
                "pxplus.pxplusDirectory.path": {
                    "type": "string",
                    "description": "Path to pxplus.exe (In case of Windx, path to pxplus.exe and servername etc.)",
                    "default": "",
                    "scope": "window"
                },
                "pxplus.pxplusDirectory.program": {
                    "type": "string",
                    "description": "Compile program to run when using Windx pxplus.exe",
                    "default": "",
                    "scope": "window"
                },
                "pxplus.workingDirectory.source": {
                    "type": "string",
                    "description": "Source file directory",
                    "default": "",
                    "scope": "window"
                },
                "pxplus.workingDirectory.program": {
                    "type": "string",
                    "description": "Compiled program directory",
                    "default": "",
                    "scope": "window"
                },
                "pxplus.workingDirectory.errors": {
                    "type": "string",
                    "description": "Compile errors log directory",
                    "default": "",
                    "scope": "window"
                }
            }
        },
        "commands": [
            {
                "category": "PxPlus",
                "command": "pxplus.cpl",
                "title": "Compile"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/b1tzer0/vscode-pxplus.git"
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "yarn run test-compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.3",
        "@types/node": "^20.8.8",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0",
        "ts-loader": "^9.5.0",
        "typescript": "^5.2.2",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@types/vscode": "^1.83.1",
        "@vscode/test-electron": "^2.3.6",
        "@vscode/vsce": "^2.21.1"
    }
}
